<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        				http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="retirevePromotion">
	
	<action-state id="retirevePromotion">
		<evaluate expression="promotions.retrieve()" result="flowScope.promotion"/> 		
		<transition  to="checkPromotionExpiration" />
	</action-state>
	
	<action-state id="checkPromotionExpiration">
		<evaluate expression="flowScope.promotion.getExpiration().compareTo(T(java.util.Calendar).getInstance()) >= 0"/> 		
		<transition on="yes" to="promotion"/>
		<transition on="no" to="end"/>
	</action-state>
	
   	<action-state id="promotion">
   		
		<on-entry>		
			<evaluate expression="audioItem" result="flowScope.promotionAudioItem" />
			<evaluate expression="wording" result="flowScope.promotionAudioItem.wording" />
			<set name="flowScope.promotionAudioItem.wording.text" value="flowScope.promotion.getWording()"/> 
	        
			<evaluate expression="output" result="flowScope.promotionOutput"></evaluate>	
			<evaluate expression="flowScope.promotionOutput.audioItems.add(flowScope.promotionAudioItem)"/> 
			
			<set name="flowScope.promotionOutput.catchHangup" value="true"></set>
		</on-entry>

		<evaluate expression="flowProcessor.process(flowScope.promotionOutput)"/> 		
		<transition to="render" />
	</action-state>
	
	<view-state id="render" view="#{flowProcessor.getRenderer().getView()}" model="lastInputResult">    
        <transition on="hangup" to="hangup"/>
        <transition to="end" />
    </view-state>
    
    <action-state id="hangup">
        <evaluate expression="T(java.lang.System).out.println('########## Catch Hang Up')"></evaluate>
        <transition to="end" />
    </action-state>
    
	<end-state id="end" />	
</flow>