<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        				http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
    abstract="true">

	<action-state id="maxIntOutput">   		
		<on-entry>
			<evaluate expression="jVoiceArchAudioItem" result="flowScope.maxIntOutputAudioItem" /> 			
  			<set name="flowScope.maxIntOutputAudioItem.wording" value="locutionProvider.getWording(T(com.vectorsf.jvoiceframework.testapp.locution.Error).MAX_INT)"/> 

			<evaluate expression="jVoiceArchOutput" result="flowScope.maxIntOutput"></evaluate>	
			<evaluate expression="flowScope.maxIntOutput.audioItems.add(flowScope.maxIntOutputAudioItem)"/> 			 
		</on-entry>

		<evaluate expression="flowProcessor.process(flowScope.maxIntOutput)"/> 		
		<transition to="transfer"/>
	</action-state>
	
	
	<view-state id="transfer" view="flowRedirect:transfer"/>
	
	<!-- Los dos eventos  se tratan igual -->
	 <global-transitions>
          <transition on="maxnomatch" to="maxIntOutput"/>
          <transition on="maxnoinput" to="maxIntOutput"/>
    </global-transitions>
	
</flow>