<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        				http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="setupDefaults">
	<!-- De momento no tenemos un mecanismo de carga de la configuraci칩n por defecto. Faltan las gramaticas, y el max attempts por defecto -->
	<action-state id="setupDefaults">
		<on-entry>
		    <evaluate expression="appConfig.getValue('max')"/>
			<evaluate expression="statisticsLogger" result="flowScope.sl" />
			<set name="flowScope.sl.callID" value="'jvoice'"></set>
			<set name="flowScope.sl.serviceID" value="'main'"></set>
			<evaluate expression="flowScope.sl.DEBUG('Hola caracola')" />
		</on-entry>
		<evaluate expression="appConfigDefaults.setBargein(true)"></evaluate>
		<transition to="setupLanguage"></transition>
	</action-state>
	
	<!-- Esto lo hacemos por que las locuciones iniciales s칩lo est치n en espa침ol -->
	<action-state id="setupLanguage">
		<evaluate expression="jVoiceArchUser.setLocale(new java.util.Locale('es','ES'))"></evaluate>
		<transition to="retreiveCTIData"></transition>
	</action-state>
	
	<action-state id="retreiveCTIData">
		<evaluate expression="ctiData.retreive()"></evaluate>
		<transition to="end"></transition>
	</action-state>

	<end-state id="end"/>	
</flow>