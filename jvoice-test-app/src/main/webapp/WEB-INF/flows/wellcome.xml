<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        				http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="wellcomeOutput">

   	<action-state id="wellcomeOutput">
		<on-entry>
			<evaluate expression="output" result="flowScope.wellcomeOutput"></evaluate>
			<set name="flowScope.wellcomeOutput.bargein" value="true" /> 
			<evaluate expression="audioItem" result="flowScope.wellcomeOutputAudioItem" /> 
  			<set name="flowScope.wellcomeOutputAudioItem.wording" value="locutionProvider.getLocution(T(com.vectorsf.jvoiceframework.testapp.locution.Wellcome).BIENVENIDA_RETAIL)" /> 

			<evaluate expression="flowScope.wellcomeOutput.getAudioItemsList().add(flowScope.wellcomeOutputAudioItem)"/> 
		</on-entry>

		<evaluate expression="flowProcessor.process(flowScope.wellcomeOutput)"/> 
		
		<transition on="" to="wellcome_render" />
	</action-state>

	<view-state id="wellcome_render" view="render">
		<transition to="end"/> 
	</view-state>

	<end-state id="end"/>	
</flow>