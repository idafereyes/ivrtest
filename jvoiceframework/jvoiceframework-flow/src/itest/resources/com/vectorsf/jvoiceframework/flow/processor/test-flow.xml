<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
        				http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd" 
    start-state="output">

    <action-state id="output">
		<on-entry>
			<evaluate expression="output" result="flowScope.output"></evaluate>

            <evaluate expression="audioItem" result="flowScope.audioItem1" />
            <set name="flowScope.audioItem1.wording" value="'Hello'" />     
            <evaluate expression="flowScope.output.audioItemsList.add(audioItem1)"/>
		</on-entry>

    	<evaluate expression="flowProcessor.process(flowScope.output)"/>
    		
    	<transition to="render" />
    </action-state> 
  
    <view-state id="render" view="render">
    	<transition on="success" to="ok_end" />
    	<transition on="failure" to="failure_end" />
    </view-state>
    
    <end-state id="ok_end"></end-state>
    
    <end-state id="failure_end"></end-state>
   
</flow>