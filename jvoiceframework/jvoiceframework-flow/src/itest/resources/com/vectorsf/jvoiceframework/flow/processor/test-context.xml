<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
 <bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
    <property name="scopes">
        <map>
            <entry key="flow">
                <bean class="org.springframework.webflow.scope.FlowScope"/>
            </entry>
        </map>
    </property>
</bean>

<bean id="audioItem" class="com.vectorsf.jvoiceframework.core.bean.AudioItem" scope="prototype"/>
<bean id="wording" class="com.vectorsf.jvoiceframework.core.bean.Wording" scope="prototype"/>
<bean id="output" class="com.vectorsf.jvoiceframework.core.bean.Output" scope="prototype"/>
<bean id="input" class="com.vectorsf.jvoiceframework.core.bean.Input" scope="prototype"/>
<bean id="renderer" class="com.vectorsf.jvoiceframework.flow.render.html.HTMLRenderer"/>
<bean id="states" class="java.util.ArrayList" scope="flow"/>

<bean id="flowProcessor" class="com.vectorsf.jvoiceframework.flow.processor.FlowProcessor" scope="flow">
	<property name="states" ref="states"></property>
	<property name="renderer" ref="renderer"></property>
</bean>
 
</beans>